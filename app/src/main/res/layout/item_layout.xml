<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#5A5959"
    app:cardCornerRadius="10sp"
    android:layout_marginBottom="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/carMaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_toStartOf="@+id/addToFavourite"
            android:text="VW GOLF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#cccccc"/>
        <TextView
            android:id="@+id/yearCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/carMaker"
            android:layout_below="@id/carMaker"
            android:text="2000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:paddingBottom="10dp"
            android:textColor="#cccccc"
            />
        <ImageView
            android:id="@+id/addToFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_baseline_favorite_24"
            android:layout_marginEnd="10dp"
            app:tint="#cccccc"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>